mixin panel(number)
  .panel
    .panel__name Минимальное значение:
      input(type="text").panel__minValue
    .panel__name Максимальное значение:
      input(type="text").panel__maxValue
    .panel__name Тек. значение:
      input(type="text").panel__curValue
    .panel__name
      input(type="checkbox" name="showValueNote" id=`showValue+${number}`).panel__showNoteValue.panel__checkbox
      label(for=`showValue+${number}`) Показать значения
    .panel__name Шаг:
      input(type="text").panel__step
    .panel__name
      input(type="checkbox" name="verticalView" id=`verticalView+${number}`).panel__verticalView.panel__checkbox
      label(for=`verticalView+${number}`) Вертикальный вид
    .panel__name
      input(type="checkbox" name="double" id=`double+${number}`).panel__double.panel__checkbox
      label(for=`double+${number}`) Диапазон
    .panel__name От:
      input(type="text").panel__from
    .panel__name До:
      input(type="text").panel__to
